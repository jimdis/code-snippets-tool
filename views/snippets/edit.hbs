<h1>
    <span class="fas fa-edit"></span> Edit Snippet
</h1>
<form method="post" action="/snippets/edit">
    <input type="hidden" name="userID" value="{{locals.userID}}" />
    <input type="hidden" name="snippetID" value="{{locals.snippetID}}" />
    <div class="form-group">
        <label for="snippetTitle">Title</label>
        <input type="text" class="form-control" id="snippetTitle" name="title" value="{{locals.title}}" required="required" autofocus="autofocus">
    </div>
    <div class="form-group">
        <label for="snippetDescription">Description</label>
        <input type="text" class="form-control" id="snippetDescription" name="description" value="{{locals.description}}" required="required">
    </div>
    <div class="form-group">
        <label for="snippetLanguage">Language</label>
        <input list="languagesList" class="form-control" id="snippetLanguage" name="language" autocomplete="off" value="{{locals.language}}">
        <datalist id="languagesList"></datalist>
    </div>
    <div class="form-group">
        <label for="snippetContent">Code</label>
        <textarea class="form-control" id="snippetContent" rows="5" name="content" required="required">{{locals.content}}</textarea>
    </div>
    <button type="submit" class="btn btn-lg btn-primary">Update Snippet!</button>
</form>