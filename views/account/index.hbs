<div class="container py-3">
    <h1>
        <span class="fas fa-user-circle text-muted mr-3"></span>Your account
    </h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Username</th>
                <th>Joined</th>
                <th class="text-center">#Snippets</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{locals.username}}</td>
                <td>{{locals.date}}</td>
                <td class="text-center"><a href="/snippets?author={{locals.username}}">{{locals.snippets}}</a></td>
            </tr>
        </tbody>
    </table>
    <form method="post" action="/account">
        <button type="submit" class="btn btn-lg btn-danger">Log out!</button>
    </form>
</div>