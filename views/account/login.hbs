<div class="container py-3">
    <h1>
        <span class="fas fa-user text-muted mr-3"></span>Log in to your account
    </h1>
    <div class="col-md-6 py-3 bg-light">
        <form method="post" action="/account/login">
            <div class="form-group">
                <label for="accountUsername">Username</label>
                <input type="text" class="form-control" id="accountUsername" name="username" placeholder="Your username..." required="required" autofocus="autofocus">
            </div>
            <div class="form-group">
                <label for="accountPassword">Password</label>
                <input type="password" class="form-control" id="accountPassword" name="password" placeholder="Your password" required="required">
            </div>
            <button type="submit" class="btn btn-lg btn-primary">Log in!</button>
        </form>
        <div class="pt-3">
            or <a href="/account/create">Create a new account...</a>
        </div>
    </div>
</div>