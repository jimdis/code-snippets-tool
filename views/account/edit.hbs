<div class="container py-3">
    <h1>
        <span class="fas fa-edit text-muted mr-3"></span> Edit User Account
    </h1>
    <div class="col-md-6 py-3 bg-light">
        <form method="post" action="/account/edit">
            <div class="form-group">
                <label for="accountUsername">Username</label>
                <input type="text" class="form-control" id="accountUsername" name="username" value="{{locals.username}}" required="required" autofocus="autofocus">
            </div>
            <div class="form-group">
                <label for="newPassword">Password</label>
                <input type="password" class="form-control" id="newPassword" name="newPassword" placeholder="Select a new strong password">
            </div>
            <div class="form-group">
                <label for="accountPassword">Password</label>
                <input type="password" class="form-control" id="accountPassword" name="currentPassword" placeholder="" required="required">
            </div>
            <button type="submit" class="btn btn-lg btn-primary">Create new account!</button>
        </form>
    </div>
</div>